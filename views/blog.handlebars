<div class="row mt-4">
  <div class="col-md-6">
    <h3>Update Your Blog:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Blog title:</label>
        <input class="form-input" data-blog_id="{{id}}" type="text" id="blog-name" name="blog-name" value="{{title}}" />
      </div>
      <div class="form-group">
        <label for="blog-desc">Content:</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc">{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/update.js"></script>