<div class="row mt-4">
  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Recent Blogs:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.title}}</h4>
        <span>{{format_date blog.createdAt}}</span>
        <span>{{blog.user.name}}</span>
        <span>{{blog.content}}</span>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/home.js"></script>